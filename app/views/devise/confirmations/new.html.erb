<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <div class="header">
    <%= link_to root_path do %>
      <%= image_tag 'back_arrow.svg' %>
    <% end %>
    <div class="actions">
      <%= f.submit "Resend", class: "header-btn" %>
    </div>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form">
    <h4 style="text-align: center; color: gray">Resend confirmation instructions</h4>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
