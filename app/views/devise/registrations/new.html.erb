
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="header">
    <%= link_to root_path do %>
      <%= image_tag 'back_arrow.svg' %>
    <% end %>
    <p>Register</p>
    <div class="actions">
      <%= f.submit "Next", class: "header-btn" %>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form">
    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name' %>
    </div>

    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: 'last-input' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
